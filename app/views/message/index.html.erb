<div class="container">
<div class="input-field col s12">
<%= form_tag message_index_path, method: :post do %>
  <%= text_area_tag 'message[content]', @message.content, class:"materialize-textarea", id: "textarea1"%>
  <%= submit_tag "Save", class:"btn" %>
<% end %>
</div>


<% @messages.each do |message| %>

  <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <p><%= message.content %></p>
        </div>
        <div class="card-action">
          <%= form_tag message_like_path(message.id), method: :post do %>
            <%= submit_tag "Like ( #{message.likes} )", class: "btn green "  %>
          <% end %>

          <%= form_tag message_dislike_path(message.id), method: :post do %>
            <%= submit_tag "Dislike ( #{message.dislikes} )" , class: "btn red"  %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

</div>